---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getAllPosts } from '@/lib/data-utils'

const allPosts = await getAllPosts()
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
const latestPosts = sortedPosts.slice(0, 5)
const myBlogs = sortedPosts.filter((post) => post.data.authors?.includes('russel')).slice(0, 5)
const friendsBlogs = sortedPosts.filter((post) => !post.data.authors?.includes('russel')).slice(0, 5)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  
  <section class="rounded-lg border bg-gradient-to-br from-background to-muted/20">
    <div class="flex flex-col space-y-1.5 p-8">
      <h3 class="text-4xl leading-none font-bold bg-gradient-to-r from-foreground to-foreground/70 bg-clip-text text-transparent">od·ys·sey</h3>
      <p class="text-muted-foreground text-sm">
        /ˈädəsē/ &bull; <span class="font-medium">noun</span>
      </p>
      <p class="text-muted-foreground">
        a long, wandering journey — not always to new places, sometimes just through yourself.
      </p>
    </div>
  </section>

  <section class="flex flex-col gap-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-3xl font-bold">Latest Posts</h2>
      <Link href="/blog" class={buttonVariants({ variant: 'outline', size: 'sm' })}>
        View All
      </Link>
    </div>

    <div class="rounded-lg border bg-card" data-tabs-container>
      <div class="border-b bg-muted/30">
        <div class="flex gap-1 p-1" role="tablist">
          <button
            class="tab-button flex items-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md transition-all hover:bg-background/60 data-[active=true]:bg-background data-[active=true]:shadow-sm"
            data-tab="all"
            data-active="true"
            role="tab"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            All Posts
          </button>
          <button
            class="tab-button flex items-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md transition-all hover:bg-background/60 data-[active=true]:bg-background data-[active=true]:shadow-sm"
            data-tab="mine"
            data-active="false"
            role="tab"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Mine
          </button>
          <button
            class="tab-button flex items-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md transition-all hover:bg-background/60 data-[active=true]:bg-background data-[active=true]:shadow-sm"
            data-tab="collaborators"
            data-active="false"
            role="tab"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            Collaborators
          </button>
        </div>
      </div>

      <div class="p-6">
        <div class="tab-content" data-tab-content="all" data-active="true">
          {latestPosts.length > 0 ? (
            <ul class="flex flex-col gap-y-4">
              {latestPosts.map((post) => (
                <li class="transform transition-all hover:scale-[1.01]">
                  <BlogCard entry={post} />
                </li>
              ))}
            </ul>
          ) : (
            <div class="flex flex-col items-center justify-center py-12 text-center">
              <svg class="w-12 h-12 text-muted-foreground/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p class="text-muted-foreground">No posts yet. Start your odyssey!</p>
            </div>
          )}
        </div>

        <div class="tab-content hidden" data-tab-content="mine" data-active="false">
          {myBlogs.length > 0 ? (
            <ul class="flex flex-col gap-y-4">
              {myBlogs.map((post) => (
                <li class="transform transition-all hover:scale-[1.01]">
                  <BlogCard entry={post} />
                </li>
              ))}
            </ul>
          ) : (
            <div class="flex flex-col items-center justify-center py-12 text-center">
              <svg class="w-12 h-12 text-muted-foreground/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              <p class="text-muted-foreground">No posts from you yet. Time to write!</p>
            </div>
          )}
        </div>

        <div class="tab-content hidden" data-tab-content="collaborators" data-active="false">
          {friendsBlogs.length > 0 ? (
            <ul class="flex flex-col gap-y-4">
              {friendsBlogs.map((post) => (
                <li class="transform transition-all hover:scale-[1.01]">
                  <BlogCard entry={post} />
                </li>
              ))}
            </ul>
          ) : (
            <div class="flex flex-col items-center justify-center py-12 text-center">
              <svg class="w-12 h-12 text-muted-foreground/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              <p class="text-muted-foreground mb-2">No collaborator posts yet.</p>
              <p class="text-sm text-muted-foreground">Invite friends to join your odyssey!</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('astro:page-load', () => {
    const tabButtons = document.querySelectorAll('.tab-button')
    const tabContents = document.querySelectorAll('.tab-content')

    tabButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const tabName = button.getAttribute('data-tab')
        
        tabButtons.forEach((btn) => {
          btn.setAttribute('data-active', 'false')
        })
        button.setAttribute('data-active', 'true')

        tabContents.forEach((content) => {
          if (content.getAttribute('data-tab-content') === tabName) {
            content.setAttribute('data-active', 'true')
            content.classList.remove('hidden')
          } else {
            content.setAttribute('data-active', 'false')
            content.classList.add('hidden')
          }
        })
      })
    })
  })
</script>

<style>
  .tab-button {
    position: relative;
  }
  
  .tab-button[data-active="true"] {
    color: hsl(var(--foreground));
  }
  
  .tab-button[data-active="false"] {
    color: hsl(var(--muted-foreground));
  }

  .tab-content {
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
