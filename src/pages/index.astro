---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import Newsletter from '@/components/Newsletter.astro'
import PageHead from '@/components/PageHead.astro'
import VirtualGuitar from '@/components/VirtualGuitar.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getAllPosts } from '@/lib/data-utils'
import Analytics from '@vercel/analytics/astro'
import { inject } from '@vercel/analytics';
const allPosts = await getAllPosts()
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
const latestPosts = sortedPosts.slice(0, 5)
const myBlogs = sortedPosts.filter((post) => post.data.authors?.includes('russel')).slice(0, 5)
const friendsBlogs = sortedPosts.filter((post) => !post.data.authors?.includes('russel')).slice(0, 5)
---


<Layout class="max-w-4xl">
  <PageHead slot="head" title="Home" />
  
<section class="rounded-lg border bg-gradient-to-br from-background to-muted/20 relative">
  <a 
    id="now-playing-badge" 
    href="/spotify"
    class="hidden absolute top-4 right-4 max-w-[calc(100%-2rem)]"
  >
    <div class="flex items-center gap-2.5 px-4 py-2 bg-primary/15 hover:bg-primary/25 rounded-full transition-all shadow-sm">
      <span id="playing-indicator" class="inline-block w-2.5 h-2.5 bg-primary rounded-full animate-pulse"></span>
      <div class="flex items-center gap-2 max-w-[120px] sm:max-w-[180px] md:max-w-[250px] overflow-hidden">
        <svg id="badge-icon" class="w-4 h-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
        </svg>
        <div class="overflow-hidden relative">
          <span id="now-playing-text" class="text-sm font-semibold text-primary whitespace-nowrap inline-block">Now Playing</span>
        </div>
      </div>
    </div>
  </a>
  
  <div class="flex flex-col space-y-1.5 p-8">
    <h3 class="text-4xl leading-none font-bold bg-gradient-to-r from-foreground to-foreground/70 bg-clip-text text-transparent">en·dur·ance</h3>
    <p class="text-muted-foreground text-sm">
      /ɛnˈdjʊərəns/ • <span class="font-medium">noun</span>
    </p>
    <p class="text-muted-foreground">
      the quiet ability to keep going, through effort, fatigue, and time, especially when stopping would be easier.
    </p>
  </div>
</section>

<script>
  let nowPlayingInterval: ReturnType<typeof setInterval> | undefined;
  let lastKnownSong = '';

  const checkNowPlaying = async () => {
    try {
      const response = await fetch('https://blogsbackend.vidyoyo.workers.dev/api/now-playing', {
        cache: 'no-cache'
      });
      
      if (response.ok) {
        const data = await response.json();
        
        const badge = document.getElementById('now-playing-badge');
        const text = document.getElementById('now-playing-text');
        const indicator = document.getElementById('playing-indicator');
        const icon = document.getElementById('badge-icon');
        
        if (data.isPlaying && data.name && badge && text) {
          const songName = data.name;
          
          // Only update DOM if song changed for better performance
          if (songName !== lastKnownSong) {
            lastKnownSong = songName;
            
            // Update icon to show currently playing
            if (icon) {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />';
            }
            
            // Show pulse animation for currently playing
            if (indicator) {
              indicator.classList.remove('hidden');
            }
            
            // Check if text is too long (more than 20 characters)
            if (songName.length > 20) {
              // Duplicate text for seamless scrolling
              text.textContent = songName + ' • ' + songName + ' • ';
              text.classList.add('scrolling-text');
            } else {
              text.textContent = songName;
              text.classList.remove('scrolling-text');
            }
            
            badge.classList.remove('hidden');
          }
        } else {
          // Try to get last played song
          await checkLastPlayed();
        }
      }
    } catch (error) {
      console.log('Spotify server not available');
      await checkLastPlayed();
    }
  };

  const checkLastPlayed = async () => {
    try {
      const response = await fetch('https://blogsbackend.vidyoyo.workers.dev/api/last-played', {
        cache: 'no-cache'
      });
      
      if (response.ok) {
        const data = await response.json();
        
        const badge = document.getElementById('now-playing-badge');
        const text = document.getElementById('now-playing-text');
        const indicator = document.getElementById('playing-indicator');
        const icon = document.getElementById('badge-icon');
        
        if (data.name && badge && text) {
          const songName = data.name;
          
          // Calculate time ago dynamically
          const playedDate = new Date(data.playedAt);
          const now = new Date();
          const diffMs = now.getTime() - playedDate.getTime();
          const diffMins = Math.floor(diffMs / 60000);
          const diffHours = Math.floor(diffMins / 60);
          
          let timeAgo = '';
          if (diffHours > 0) {
            timeAgo = `${diffHours}h ago`;
          } else if (diffMins > 0) {
            timeAgo = `${diffMins}m ago`;
          } else {
            timeAgo = 'Just now';
          }
          
          const displayText = `${songName} (${timeAgo})`;
          
          // Only update if changed
          if (displayText !== lastKnownSong) {
            lastKnownSong = displayText;
            
            // Update icon to show last played (clock icon)
            if (icon) {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />';
            }
            
            // Hide pulse animation for last played
            if (indicator) {
              indicator.classList.add('hidden');
            }
            
            // Check if text is too long
            if (displayText.length > 20) {
              text.textContent = displayText + ' • ' + displayText + ' • ';
              text.classList.add('scrolling-text');
            } else {
              text.textContent = displayText;
              text.classList.remove('scrolling-text');
            }
            
            badge.classList.remove('hidden');
          }
        } else if (badge) {
          badge.classList.add('hidden');
        }
      }
    } catch (error) {
      console.log('Could not fetch last played song');
      const badge = document.getElementById('now-playing-badge');
      if (badge) {
        badge.classList.add('hidden');
      }
    }
  };

  document.addEventListener('astro:page-load', () => {
    // Clear any existing interval
    if (nowPlayingInterval) {
      clearInterval(nowPlayingInterval);
    }
    
    // Initial check
    checkNowPlaying();
    
    // Update every second for dynamic, real-time updates
    nowPlayingInterval = setInterval(checkNowPlaying, 1000);
  });

  // Clean up on page navigation
  document.addEventListener('astro:before-preparation', () => {
    if (nowPlayingInterval) {
      clearInterval(nowPlayingInterval);
    }
  });
</script>

<style>
  /* Scrolling animation for long song names */
  .scrolling-text {
    animation: scroll-text 15s linear infinite;
  }

  @keyframes scroll-text {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pause scrolling on hover to read full title */
  #now-playing-badge:hover .scrolling-text {
    animation-play-state: paused;
  }
</style>

  <VirtualGuitar />


  <section class="flex flex-col gap-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-3xl font-bold">Latest Posts</h2>
      <Link href="/blog" class={buttonVariants({ variant: 'outline', size: 'sm' })}>
        View All
      </Link>
    </div>

    <div class="rounded-lg border bg-card" data-tabs-container>
      <div class="border-b bg-muted/30">
        <div class="flex gap-1 p-1" role="tablist">
          <button
            class="tab-button flex items-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md transition-all hover:bg-background/60 data-[active=true]:bg-background data-[active=true]:shadow-sm"
            data-tab="mine"
            data-active="true"
            role="tab"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Mine
          </button>
          <button
            class="tab-button flex items-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md transition-all hover:bg-background/60 data-[active=true]:bg-background data-[active=true]:shadow-sm"
            data-tab="collaborators"
            data-active="false"
            role="tab"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            Collaborators
          </button>
        </div>
      </div>

      <div class="p-6">
        <div class="tab-content" data-tab-content="mine" data-active="true">
          {myBlogs.length > 0 ? (
            <ul class="flex flex-col gap-y-4">
              {myBlogs.map((post) => (
                <li class="transform transition-all hover:scale-[1.01]">
                  <BlogCard entry={post} />
                </li>
              ))}
            </ul>
          ) : (
            <div class="flex flex-col items-center justify-center py-12 text-center">
              <svg class="w-12 h-12 text-muted-foreground/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              <p class="text-muted-foreground">No posts from you yet. Time to write!</p>
            </div>
          )}
        </div>

        <div class="tab-content hidden" data-tab-content="collaborators" data-active="false">
          {friendsBlogs.length > 0 ? (
            <ul class="flex flex-col gap-y-4">
              {friendsBlogs.map((post) => (
                <li class="transform transition-all hover:scale-[1.01]">
                  <BlogCard entry={post} />
                </li>
              ))}
            </ul>
          ) : (
            <div class="flex flex-col items-center justify-center py-12 text-center">
              <svg class="w-12 h-12 text-muted-foreground/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              <p class="text-muted-foreground mb-2">No collaborator posts yet.</p>
              <p class="text-sm text-muted-foreground">Invite friends to join your odyssey!</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <Newsletter variant="default" position="bottom" />

</Layout>

<script >
  document.addEventListener('astro:page-load', () => {
    const tabButtons = document.querySelectorAll('.tab-button')
    const tabContents = document.querySelectorAll('.tab-content')

    tabButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const tabName = button.getAttribute('data-tab')
        
        tabButtons.forEach((btn) => {
          btn.setAttribute('data-active', 'false')
        })
        button.setAttribute('data-active', 'true')

        tabContents.forEach((content) => {
          if (content.getAttribute('data-tab-content') === tabName) {
            content.setAttribute('data-active', 'true')
            content.classList.remove('hidden')
          } else {
            content.setAttribute('data-active', 'false')
            content.classList.add('hidden')
          }
        })
      })
    })
  })
</script>

<style>
  .tab-button {
    position: relative;
  }
  
  .tab-button[data-active="true"] {
    color: hsl(var(--foreground));
  }
  
  .tab-button[data-active="false"] {
    color: hsl(var(--muted-foreground));
  }

  .tab-content {
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
