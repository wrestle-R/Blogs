---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getAllPosts } from '@/lib/data-utils'
const allPosts = await getAllPosts()
const myBlogs = allPosts.filter((post) => post.data.authors?.includes('russel'))
const friendsBlogs = allPosts.filter((post) => !post.data.authors?.includes('russel'))
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section class="rounded-lg border">
    <div class="flex flex-col space-y-1.5 p-6">
      <h3 class="text-3xl leading-none font-medium">od¬∑ys¬∑sey</h3>
      <p class="text-muted-foreground text-sm">
        /Àà√§d…ôsƒì/ &bull; <span class="font-medium">noun</span>
      </p>
      <p class="text-muted-foreground text-sm">
        a long, wandering journey ‚Äî not always to new places, sometimes just through yourself.
      </p>
    </div>
  </section>

  <section class="flex flex-col gap-y-4">
    <div class="flex items-center gap-2">
      <h2 class="text-2xl font-bold">my blogs</h2>
      <span class="text-muted-foreground text-sm">‚úçÔ∏è</span>
    </div>
    <ul class="flex flex-col gap-y-4">
      {
        myBlogs.length > 0 ? (
          myBlogs.slice(0, 3).map((post) => (
            <li>
              <BlogCard entry={post} />
            </li>
          ))
        ) : (
          <p class="text-muted-foreground italic">No posts yet... but soon!</p>
        )
      }
    </ul>
    {myBlogs.length > 3 && (
      <div class="flex justify-center">
        <Link
          href="/blog"
          class={buttonVariants({ variant: 'ghost' }) + ' group'}
        >
          See all my posts <span
            class="ml-1.5 transition-transform group-hover:translate-x-1"
            >&rarr;</span
          >
        </Link>
      </div>
    )}
  </section>

  <section class="flex flex-col gap-y-4">
    <div class="flex items-center gap-2">
      <h2 class="text-2xl font-bold">friends' corner</h2>
      <span class="text-muted-foreground text-sm">üë•</span>
    </div>
    {
      friendsBlogs.length > 0 ? (
        <>
          <ul class="flex flex-col gap-y-4">
            {friendsBlogs.slice(0, 2).map((post) => (
              <li>
                <BlogCard entry={post} />
              </li>
            ))}
          </ul>
          {friendsBlogs.length > 2 && (
            <div class="flex justify-center">
              <Link
                href="/blog"
                class={buttonVariants({ variant: 'ghost' }) + ' group'}
              >
                See all friends' posts <span
                  class="ml-1.5 transition-transform group-hover:translate-x-1"
                  >&rarr;</span
                >
              </Link>
            </div>
          )}
        </>
      ) : (
        <div class="rounded-lg border border-dashed p-6 text-center">
          <p class="text-muted-foreground">
            No posts from friends yet. Want to contribute? Send me your thoughts!
          </p>
        </div>
      )
    }
  </section>
</Layout>
