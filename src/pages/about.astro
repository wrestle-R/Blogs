---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllProjects } from '@/lib/data-utils'

const projects = await getAllProjects()
---

<Layout class="max-w-4xl  ">
  <PageHead slot="head" title="About" />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:info' }]} />

  <section>
    <div class="min-w-full">
      <div class="prose mb-8">
        <h1 class="text-3xl font-bold mb-4">Hey, I'm Russel ðŸ‘‹</h1>
        <p class="mt-0">
          I'm a Computer Engineering student at Fr. CRCE, passionate about web development
          and building intuitive applications. Currently exploring AI/ML and IoT while
          working on various full-stack projects.
        </p>
        <p>
          When I'm not coding, you'll find me playing football (I'm the vice-captain of my
          college team!), strumming my guitar, or diving deep into music theory. I also have
          a soft spot for sitcoms, check out my blog for my favorites.
        </p>
        <p>
          This blog is my digital diary, a place to pen down thoughts, reflections, and
          random musings before I forget them. It's not always serious, and sometimes it
          reads like I'm arguing with myself (and losing), but that's the fun of it.
        </p>
      </div>

      <h2 class="mb-4 text-2xl font-medium">Projects</h2>
      <div class="flex flex-col gap-4">
        {projects.map((project) => <ProjectCard project={project} />)}
      </div>
    </div>
  </section>
</Layout>
