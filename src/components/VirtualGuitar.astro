---
// Minimalistic Guitar Display
---

<section class="guitar-section">
    <h2 class="guitar-title">Virtual Guitar</h2>
    <div class="fretboard">
<div class="fret-line" style="left: 8.25%;"></div>  <!-- 1st -->
<div class="fret-line" style="left: 22.17%;"></div> <!-- 2nd -->
<div class="fret-line" style="left: 33.56%;"></div> <!-- 3rd -->
<div class="fret-line" style="left: 44.05%;"></div> <!-- 4th -->
<div class="fret-line" style="left: 53.72%;"></div> <!-- 5th -->
<div class="fret-line" style="left: 62.63%;"></div> <!-- 6th -->
<div class="fret-line" style="left: 70.85%;"></div> <!-- 7th -->
<div class="fret-line" style="left: 78.42%;"></div> <!-- 8th -->
<div class="fret-line" style="left: 85.40%;"></div> <!-- 9th -->
<div class="fret-line" style="left: 91.82%;"></div> <!-- 10th -->
<div class="fret-line" style="left: 100.00%;"></div> <!-- 12th -->

        <div class="fret-dots">
            <!-- Fret 3 dot -->
            <div class="fret-dot" style="left: 27.87%;"></div>
            <!-- Fret 5 dot -->
            <div class="fret-dot" style="left: 48.89%;"></div>
            <!-- Fret 7 dot -->
            <div class="fret-dot" style="left: 66.74%;"></div>
            <!-- Fret 9 dot -->
            <div class="fret-dot" style="left: 81.91%;"></div>
            <!-- Fret 12 double dots -->
            <div class="fret-dot double-top" style="left: 95.91%;"></div>
            <div class="fret-dot double-bottom" style="left: 95.91%;"></div>
        </div>


        
        <!-- Strings -->
        <div class="strings-container">
            <div class="string-row">
                <span class="string-label clickable" data-note="E">E</span>
                <div class="string-wrapper" data-open-note="E">
                    <div class="string thickest"></div>
                </div>
            </div>
            <div class="string-row">
                <span class="string-label clickable" data-note="A">A</span>
                <div class="string-wrapper" data-open-note="A">
                    <div class="string thick"></div>
                </div>
            </div>
            <div class="string-row">
                <span class="string-label clickable" data-note="D">D</span>
                <div class="string-wrapper" data-open-note="D">
                    <div class="string medium"></div>
                </div>
            </div>
            <div class="string-row">
                <span class="string-label clickable" data-note="G">G</span>
                <div class="string-wrapper" data-open-note="G">
                    <div class="string thin"></div>
                </div>
            </div>
            <div class="string-row">
                <span class="string-label clickable" data-note="B">B</span>
                <div class="string-wrapper" data-open-note="B">
                    <div class="string thinner"></div>
                </div>
            </div>
            <div class="string-row">
                <span class="string-label clickable" data-note="E">E</span>
                <div class="string-wrapper" data-open-note="E">
                    <div class="string thinnest"></div>
                </div>
            </div>
        </div>
        
        <!-- Note Display -->
        <div class="note-display" id="noteDisplay"></div>
    </div>
</section>

<script>
    import * as Tone from 'tone';

    if (typeof window !== 'undefined') {
        let sampler: Tone.Sampler | null = null;
        let samplerLoadedPromise: Promise<void> | null = null;

        // Initialize and preload Tone.js sampler on page load
        function preloadAudio() {
            samplerLoadedPromise = new Promise((resolve) => {
                sampler = new Tone.Sampler({
                    urls: {
                        A2: "A2.mp3",
                        A3: "A3.mp3",
                        A4: "A4.mp3",
                        C3: "C3.mp3",
                        C4: "C4.mp3",
                    },
                    baseUrl: "https://tonejs.github.io/audio/salamander/",
                    onload: () => {
                        console.log("Guitar samples preloaded and ready");
                        resolve();
                    }
                }).toDestination();
            });
        }

        // Start audio context on first interaction
        async function ensureAudioStarted() {
            if (Tone.context.state !== 'running') {
                await Tone.start();
            }
            if (samplerLoadedPromise) {
                await samplerLoadedPromise;
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Preload audio samples immediately on page load
            preloadAudio();
            const wrappers = document.querySelectorAll('.string-wrapper');
            const stringLabels = document.querySelectorAll('.string-label.clickable');
            const noteDisplay = document.getElementById('noteDisplay');
            
            const notes = ['C', 'C#', 'D', 'D#', 'E', 'F', 'F#', 'G', 'G#', 'A', 'A#', 'B'];
            
            // Fret positions: 0 = open string, fret 1 at 16.25%, rest calibrated accordingly
            const fretPositions = [0, 16.25, 30.17, 41.56, 52.05, 61.72, 70.63, 78.85, 86.42, 93.40, 99.82];
            
            // Map simple notes to octave-based notes for Tone.js
            // Using available samples - Tone.js will pitch shift to play missing notes
            const noteOctaveMap: { [key: string]: string } = {
                'C': 'C3',
                'C#': 'C#3',
                'D': 'D3',
                'D#': 'D#3',
                'E': 'E3',
                'F': 'F3',
                'F#': 'F#3',
                'G': 'G3',
                'G#': 'G#3',
                'A': 'A3',
                'A#': 'A#3',
                'B': 'B3',
            };
            
            function getNote(openNote: string, fretNumber: number): string {
                const noteIndex = notes.indexOf(openNote);
                const newNoteIndex = (noteIndex + fretNumber) % 12;
                return notes[newNoteIndex];
            }
            
            // Function to play note using Tone.js
            async function playNote(noteName: string) {
                await ensureAudioStarted();
                if (sampler) {
                    const noteWithOctave = noteOctaveMap[noteName] || 'C3';
                    sampler.triggerAttackRelease(noteWithOctave, "0.5");
                }
            }
            
            // Function to display note
            function displayNote(noteName: string) {
                if (noteDisplay) {
                    noteDisplay.textContent = noteName;
                    noteDisplay.classList.add('show');
                    
                    setTimeout(() => {
                        noteDisplay.classList.remove('show');
                    }, 300);
                }
            }
            
            // String label click handlers
            stringLabels.forEach((label: any) => {
                label.addEventListener('click', async (e: any) => {
                    e.stopPropagation();
                    const noteName = label.getAttribute('data-note');
                    
                    if (noteName) {
                        await playNote(noteName);
                        displayNote(noteName);
                    }
                });
            });
            
            // String wrapper click handlers
            wrappers.forEach((wrapper: any) => {
                wrapper.addEventListener('click', async (e: any) => {
                    const string = wrapper.querySelector('.string') as any;
                    const rect = wrapper.getBoundingClientRect();
                    const clickX = e.clientX - rect.left;
                    const clickPosition = (clickX / rect.width) * 100;
 
                    let fretNumber = 0;
                    
                    for (let i = 0; i < fretPositions.length; i++) {
                        if (clickPosition >= fretPositions[i]) {
                            fretNumber = i + 1;
                        } else {
                            break;
                        }
                    }
                    
                    const openNote = wrapper.getAttribute('data-open-note');
                    const notePlayed = getNote(openNote, fretNumber);
                    
                    await playNote(notePlayed);
                    displayNote(notePlayed);
                    
                    // Create vibration effect
                    (wrapper as any).style.setProperty('--vibration-origin', clickPosition + '%');
                    string.classList.add('vibrating');
                    
                    setTimeout(() => {
                        string.classList.remove('vibrating');
                    }, 800);
                });
            });
        });
    }
</script>

<style is:global>
    .guitar-section {
        width: 100%;
        margin: 2rem 0;
        display: block;
    }

    .guitar-title {
        text-align: left;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: oklch(0.3 0 0);
    }

    :root[data-theme='dark'] .guitar-title {
        color: oklch(0.9 0 0);
    }

    @media (max-width: 768px) {
        .guitar-section {
            display: none;
        }
    }

    .fretboard {
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        min-height: 250px;
        padding: 2rem 0 2rem 2rem;
        display: flex;
        flex-direction: column;
        background: oklch(0.995 0 0);
        border-radius: 0.75rem;
        border: 1px solid oklch(0.9 0 0);
        transition: background-color 0.3s ease, border-color 0.3s ease;
        overflow: hidden;
    }

    .note-display {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 4rem;
        font-weight: bold;
        color: oklch(0.3 0 0);
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.15s ease;
        z-index: 10;
        text-shadow: 0 2px 8px oklch(0 0 0 / 0.2);
    }

    .note-display.show {
        opacity: 0.8;
        animation: notePopup 0.3s ease-out;
    }

    @keyframes notePopup {
        0% {
            transform: translate(-50%, -50%) scale(0.8);
            opacity: 0;
        }
        50% {
            transform: translate(-50%, -50%) scale(1.1);
            opacity: 1;
        }
        100% {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0.8;
        }
    }

    :root[data-theme='dark'] .note-display {
        color: oklch(0.9 0 0);
        text-shadow: 0 2px 8px oklch(0 0 0 / 0.5);
    }

    :root[data-theme='dark'] .fretboard {
        background: oklch(0.16 0 0);
        border-color: oklch(1 0 0 / 8%);
    }

    .fret-markers {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: none;
        z-index: 1;
    }

    .fret-line {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 2px;
        background: oklch(0.85 0 0);
        opacity: 0.4;
    }

    .fret-dots {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: none;
        z-index: 1;
    }

    .fret-dot {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: oklch(0.75 0 0);
        opacity: 0.5;
        box-shadow: 0 1px 3px oklch(0 0 0 / 0.3);
    }

    .fret-dot.double-top {
        top: 35%;
        transform: translateY(-50%);
    }

    .fret-dot.double-bottom {
        top: 65%;
        transform: translateY(-50%);
    }

    :root[data-theme='dark'] .fret-dot {
        background: oklch(0.4 0 0);
        opacity: 0.6;
    }


    :root[data-theme='dark'] .fret-line {
        background: oklch(0.3 0 0);
        opacity: 0.6;
    }

    @media (max-width: 768px) {
        .fret-line:nth-child(n+7) {
            display: none;
        }
    }

    .strings-container {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        gap: 1rem;
        position: relative;
        flex: 1;
        z-index: 2;
    }

    .string-row {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        position: relative;
        width: 100%;
    }

    .string-wrapper {
        flex: 1;
        min-width: 0;
        overflow: visible;
        position: relative;
        padding: 12px 0;
        cursor: pointer;
        display: flex;
        align-items: center;
    }

    .string-label {
        font-size: 1.25rem;
        font-weight: bold;
        color: oklch(0.25 0 0);
        min-width: 1rem;
        text-align: center;
        flex-shrink: 0;
    }

    .string-label.clickable {
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .string-label.clickable:hover {
        color: oklch(0.45 0.15 250);
        transform: scale(1.1);
    }

    :root[data-theme='dark'] .string-label {
        color: oklch(0.9 0 0);
    }

    :root[data-theme='dark'] .string-label.clickable:hover {
        color: oklch(0.7 0.15 250);
    }

    .string {
        flex: 1;
        min-width: 0;
        background: linear-gradient(to bottom,
            oklch(0.5 0 0 / 0.8),
            oklch(0.5 0 0),
            oklch(0.5 0 0 / 0.8)
        );
        border-radius: 1px;
        box-shadow: 0 2px 4px oklch(0.2 0 0 / 0.2),
                    inset 0 1px 0 oklch(0.995 0 0 / 0.1);
        cursor: pointer;
        transition: filter 0.1s ease;
        transform-origin: center;
    }

    .string:hover {
        filter: brightness(1.1);
    }

    .string.vibrating {
        animation: stringVibrate 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    }

    @keyframes stringVibrate {
        0% {
            transform: scaleY(1) translateY(0);
            filter: brightness(1.4);
        }
        10% {
            transform: scaleY(1.02) translateY(-2.5px);
        }
        20% {
            transform: scaleY(1.02) translateY(2px);
        }
        30% {
            transform: scaleY(1.015) translateY(-1.5px);
        }
        40% {
            transform: scaleY(1.01) translateY(1px);
        }
        50% {
            transform: scaleY(1.005) translateY(-0.8px);
        }
        60% {
            transform: scaleY(1.002) translateY(0.5px);
        }
        70% {
            transform: scaleY(1.001) translateY(-0.3px);
            filter: brightness(1.1);
        }
        85% {
            transform: scaleY(1) translateY(0.1px);
        }
        100% {
            transform: scaleY(1) translateY(0);
            filter: brightness(1);
        }
    }

    :root[data-theme='dark'] .string {
        background: linear-gradient(to bottom,
            oklch(0.65 0 0 / 0.9),
            oklch(0.65 0 0),
            oklch(0.65 0 0 / 0.9)
        );
        box-shadow: 0 2px 4px oklch(0 0 0 / 0.5),
                    inset 0 1px 0 oklch(0.95 0 0 / 0.2);
    }

    .string.thickest {
        height: 3px;
    }

    .string.thick {
        height: 2.75px;
    }

    .string.medium {
        height: 2.5px;
    }

    .string.thin {
        height: 2px;
    }

    .string.thinner {
        height: 1.6px;
    }

    .string.thinnest {
        height: 1.5px;
    }

    @media (max-width: 768px) {
        .fretboard {
            min-height: 150px;
            padding: 1rem 0 1rem 1rem;
        }

        .fret-line:nth-child(1) {
            left: 0 !important;
        }

        .fret-line:nth-child(2) {
            left: 16.67% !important;
        }

        .fret-line:nth-child(3) {
            left: 33.33% !important;
        }

        .fret-line:nth-child(4) {
            left: 50% !important;
        }

        .fret-line:nth-child(5) {
            left: 66.67% !important;
        }

        .fret-line:nth-child(6) {
            left: 83.33% !important;
        }

        .strings-container {
            gap: 0.3rem;
        }

        .string-label {
            font-size: 0.875rem;
            min-width: 1.25rem;
        }

        .string-row {
            gap: 0.75rem;
        }
    }
</style>
